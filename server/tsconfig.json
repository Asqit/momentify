{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"removeComments": true,
		"baseUrl": "./src",
		"paths": {
			"~/*": ["*"]
		}
	},
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
